<% if @message.image.attached? %>
  <section id="fh5co-testimonial" >
      <%= image_tag @message.image, class: "img-fluid", :style => "max-width: 100%; height: auto;"%>
  </section>
  <div class="fh5co-spacer fh5co-spacer-md"></div>
<% end %>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="fh5co-uppercase-heading-sm text-center" id="notice"><%= notice %></h2>
      </div>

      <div class="col-md-8 col-md-offset-2 clearfix fh5co-header">
        <h1 class="h1 fh5co-heading fh5co-no-margin-bottom"><%= @message_name %></h1>
        <div class="fh5co-spacer fh5co-spacer-sm"></div>
        <h4 class="h5 fh5co-heading-sub"><%= @message_content %></h4>
      </div>
      <div class="col-md-8 col-md-offset-2 clearfix fh5co-header">
        <% if @message_rtf %>
        <div class="fh5co-spacer fh5co-spacer-sm"></div>
        <div class="h5 fh5co-heading-sub"><%= @message_rtf %></div>
        <% end %>
      </div>
    </div>
    <div class="fh5co-spacer fh5co-spacer-sm"></div>
  </div>
</section>

<!-- like buttons -->
<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">

      <%= form_with model: [ @message, @message.likes.build ] do |form| %>
        <div class="field">
          <%= form.label :up, class: 'sr-only' %>
          <%= form.button :up, id: "uplike", class: "btn btn-outline fh5co-btn-icon fh5co-btn-icon", value: @up_likes %>
          <a href="" id="uplike" class="btn btn-outline fh5co-btn-icon fh5co-btn-icon"><i class="ti-thumb-up"></i> <%= @up_likes %></a>
        </div>

        <div class="field">
          <%= form.label :down, class: 'sr-only' %>
          <%= form.text_field :down %>
          <a href="" id="downlike" class="btn btn-outline fh5co-btn-icon fh5co-btn-icon"><i class="ti-thumb-down"></i> <%= @down_likes %></a>
        </div>

        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>

      </div>
    </div>
    <div class="fh5co-spacer fh5co-spacer-md"></div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row fh5co-feature-3"">
      <div class="col-md-12">
        <h2 class="fh5co-uppercase-heading-sm text-center">Comments</h2>
      </div>

    	<div class="fh5co-spacer fh5co-spacer-sm"></div>
      <% if @comments %>
        <% @comments.each do |comment| %>
					<div class="col-md-8 col-md-offset-2">
            <div class="row">
              <div class="fh5co-feature-item">
                <span class="fh5co-feature-icon"><i class="ti-comment"></i></span>
                <div class="fh5co-feature-blurb">
                  <h2 class="h4 fh5co-feature-title"><%= comment.content %></h2>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
        </div>
      </div>
    <div class="fh5co-spacer fh5co-spacer-md"></div>
</section>



<section>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="col-md-12">
          <div class="field form-group">
            <%= form_with model: [ @message, @message.comments.build ] do |form| %>
            <div class="field">
              <%= form.label :content, class: 'sr-only'%>
              <%= form.text_field :content, class: 'form-control input-lg expand', placeholder: "leave a comment" %>
            </div>
            <div class="fh5co-spacer fh5co-spacer-xxs"></div>
            <div class="col-md-12">
              <div class="actions">
                <%= form.submit class: "btn btn-primary btn-lg btn-block"%>
              </div>
            </div>
            <% end %>

            <div class="fh5co-spacer fh5co-spacer-xs"></div>
            <div class="col-md-12">
            <% if current_user.try(:admin?) %>
              <div class="actions">
                <%= link_to 'Edit Message', edit_message_path(@message), class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
            </div>

            <div class="col-md-12">
              <div class="actions">
                <%= link_to 'Back', messages_path, class: "btn btn-outline btn-lg btn-block" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
