<p id="notice"><%= notice %></p>

<h1>Downloads</h1>

<table>
  <thead>
    <tr>
      <th>En file</th>
      <th>Zh tw file</th>
      <th>Zh cn file</th>
      <th>Vi file</th>
      <th>Hmn file</th>
      <th>Archive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @downloads.each do |download| %>
      <tr>
        <td><%= download.en_title %></td>
        <td><%= image_tag download.en_file.representation(resize_to_limit: [100, 200]), class: "img-fluid" if download.en_file.attached? %></td>
        <td><%= image_tag download.zh_tw_file.representation(resize_to_limit: [100, 200]), class: "img-fluid" if download.zh_tw_file.attached? %></td>
        <td><%= image_tag download.zh_cn_file.representation(resize_to_limit: [100, 200]), class: "img-fluid" if download.zh_cn_file.attached? %></td>
        <td><%= image_tag download.vi_file.representation(resize_to_limit: [100, 200]), class: "img-fluid" if download.vi_file.attached? %></td>
        <td><%= image_tag download.hmn_file.representation(resize_to_limit: [100, 200]), class: "img-fluid" if download.hmn_file.attached? %></td>
        <td><%= download.archive %></td>
        <td><%= link_to 'Show', download %></td>
        <td><%= link_to 'Edit', edit_download_path(download) %></td>
        <td><%= link_to 'Destroy', download, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Download', new_download_path %>
